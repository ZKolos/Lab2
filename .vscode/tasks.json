{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run active file",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "/usr/bin/gcc -Wall -Wextra -Wpedantic -g ${file} -o ${fileDirname}/${fileBasenameNoExtension} && ${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
